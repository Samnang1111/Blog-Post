<style>
    /* General Styles */
    body {
        font-family: 'Poppins', sans-serif;
    }

    /* Site Header */
    .site-header {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        color: white;
        padding: 20px 0;
        text-align: center;
    }

    .site-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .site-subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        margin-top: 0;
    }

    /* Blog Actions */
    .blog-actions {
        text-align: center;
        margin: 20px 0;
    }

    .create-post-btn {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .create-post-btn:hover {
        background-color: #45a049;
    }

    /* Blog Posts */
    .blog-posts {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .blog-post {
        background-color: #f9f9f9;
        /* Light, neutral background color */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        /* Enhanced shadow */
        position: relative;
        transition: transform 0.3s, box-shadow 0.3s;
        /* Smooth transition for hover effect */
    }

    .blog-post:hover {
        transform: translateY(-8px);
        /* Slight lift effect */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        /* Stronger shadow on hover */
    }

    .post-actions {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        gap: 10px;
    }

    .action-btn {
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: #666;
        transition: color 0.3s;
    }

    .action-btn:hover {
        color: #333;
    }

    .edit-btn:hover {
        color: #4CAF50;
    }

    .delete-btn:hover {
        color: #f44336;
    }

    /* Post Summary */
    .post-summary {
        color: #333;
        /* Darker text for readability */
        margin-top: 10px;
    }

    .post-title a {
        text-decoration: none;
        color: #4CAF50;
        font-size: 1.5rem;
        font-weight: bold;
        transition: color 0.3s;
    }

    .post-title a:hover {
        color: #388E3C;
    }

    .post-meta {
        font-size: 0.9rem;
        color: #777;
        margin: 10px 0;
        display: flex;
        gap: 15px;
    }

    .post-tags {
        margin: 10px 0;
    }

    .tag {
        display: inline-block;
        background-color: #e0e0e0;
        /* Slightly darker tag background */
        color: #555;
        /* Adjusted tag text color */
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.85rem;
        margin-right: 5px;
    }

    .read-more-btn {
        color: #4CAF50;
        text-decoration: none;
        font-weight: bold;
        font-size: 1rem;
        transition: color 0.3s;
    }

    .read-more-btn:hover {
        color: #388E3C;
    }
</style>


<%- include("partials/header.ejs") %>

    <!-- Add this to the <head> section to load the font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

    <header class="site-header text-center py-5">
        <h1 class="site-title">Thought Heaven</h1>
        <p class="site-subtitle">Lifestyle Blog</p>
    </header>

    <div class="blog-actions">
        <a href="/blog/create" class="create-post-btn">
            <i class="fas fa-plus-circle"></i> New Post
        </a>
    </div>

    <main class="main-content">
        <div class="content-container">
            <div class="blog-posts">
                <% blogPosts.forEach(function(post) { %>
                    <article class="blog-post animate">
                        <div class="post-actions">
                            <a href="/blog/edit/<%= post.id %>" class="action-btn edit-btn" title="Edit Post">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="/blog/delete/<%= post.id %>" method="post" class="delete-post-form">
                                <button type="submit" class="action-btn delete-btn" title="Delete Post"
                                    onclick="return confirm('Are you sure you want to delete this post?');">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>

                        <div class="post-summary">
                            <h2 class="post-title">
                                <a href="/blog/<%= post.id %>">
                                    <%= post.title %>
                                </a>
                            </h2>
                            <div class="post-meta">
                                <span class="post-date">
                                    <i class="far fa-calendar"></i>
                                    <%= post.date %>
                                </span>
                                <span class="post-author">
                                    <i class="far fa-user"></i>
                                    <%= post.author %>
                                </span>
                            </div>
                            <div class="post-tags">
                                <% post.tags.forEach(function(tag) { %>
                                    <span class="tag"><i class="fas fa-tag"></i>
                                        <%= tag %>
                                    </span>
                                    <% }); %>
                            </div>
                            <p class="post-excerpt">
                                <%= post.excerpt %>
                            </p>
                            <a href="/blog/<%= post.id %>" class="read-more-btn">
                                Read More <span class="arrow">â†’</span>
                            </a>
                        </div>
                    </article>
                    <% }); %>
            </div>
        </div>
    </main>

