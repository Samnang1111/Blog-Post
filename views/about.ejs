    <style>
        /* Import Poppins Font */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap');


        /* General */
        body {
            font-family: 'Poppins', sans-serif;
        }

        /* Header Section */
        .site-header {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            color: white;
            text-align: center;
            padding: 5rem 0;
        }

        /* Header Title */
        .site-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        /* Header Subtitle */
        .site-subtitle {
            font-size: 1.25rem;
            font-weight: 400;
            margin-top: 0;
        }

        /* About Section */
        #about {
            padding: 5rem 0;
            background-color: #f8f9fa;
        }

        #about h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #4e54c8;
        }

        #about p {
            font-size: 1.1rem;
            font-weight: 400;
            color: #333;
            line-height: 1.8;
        }

        /* Gallery Section */
        #gallery {
            padding: 5rem 0;
        }

        #gallery h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: #4e54c8;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .gallery-image {
            transition: transform 0.3s ease;
        }

        .gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .gallery-description {
            font-size: 1rem;
            padding: 0 10px;
        }
    </style>
